{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": ["./node_modules/@types"], 
    "types": ["node"]
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]

}
